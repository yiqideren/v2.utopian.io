{
  "name": "@utopian/auth",
  "version": "1.0.0",
  "license": "GPL-3.0",
  "author": "Utopian Company SRLs",
  "description": "An Authentication webapp for Utopian",
  "productName": "Utopian Authentication",
  "cordovaId": "org.cordova.quasar.app",
  "private": true,
  "scripts": {
    "dev": "quasar dev -m ssr -p 8081",
    "debug": "node --inspect=127.0.0.1:9230 ./node_modules/quasar-cli/bin/quasar dev -t mat",
    "build": "quasar build -m ssr -t mat",
    "precommit": "lint-staged",
    "lint": "eslint --ext .js,.vue src",
    "serve:dev:ngrok": "ngrok http 8081 --region eu",
    "serve:pwa": "quasar serve ./dist/pwa-mat --port 3001",
    "serve:dist": "nodemon dist/ssr-mat/index.js",
    "serve:test:coverage": "quasar serve test/coverage/lcov-report/ --port 8788",
    "serve:test:lighthouse": "quasar serve test/lighthouse/reports/ --port 8789",
    "test": "yarn run lint",
    "test:jest": "jest --coverage",
    "test:jest:watch": "jest --watch",
    "test:webdriver": "wdio ./test/webdriver/config/wdio.conf.js",
    "audit:snyk": "snyk test --org=info-fth --json > ./test/audits/snyk.json",
    "audit:node_modules": "yarn audit --json > ./test/audits/node_modules_audit.json",
    "audit:licenses": "nlf --summary detail > ./test/audits/licenses.txt",
    "audit:lighthouse": "lighthouse http://localhost:3000 view --output-path=./test/lighthouse/reports/index.html --config-path=./test/lighthouse/configs/full-config.js",
    "vue-devtools": "./node_modules/.bin/vue-devtools"
  },
  "devDependencies": {
    "@sentry/browser": "4.4.0",
    "@steemit/steem-js": "0.7.3",
    "@utopian/i18n": "1.0.0",
    "@utopian/testing": "1.0.0",
    "axios": "0.18.0",
    "b2a": "1.0.10",
    "babel-eslint": "10.0.1",
    "concurrently": "4.1.0",
    "dotenv": "6.1.0",
    "eslint": "5.9.0",
    "eslint-config-standard": "12.0.0",
    "eslint-friendly-formatter": "4.0.1",
    "eslint-loader": "2.1.1",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "eslint-plugin-vue": "4.7.1",
    "extra-watch-webpack-plugin": "1.0.3",
    "jest": "23.6.0",
    "jsonwebtoken": "8.4.0",
    "lint-staged": "8.1.0",
    "pug": "2.0.3",
    "pug-plain-loader": "1.0.0",
    "quasar-cli": "0.17.22",
    "strip-ansi": "3.0.1",
    "typeface-lato": "0.0.54",
    "typeface-noto-sans": "0.0.54",
    "typeface-roboto-mono": "0.0.54",
    "typeface-source-sans-pro": "0.0.54",
    "vue-i18n": "8.3.2",
    "vuelidate": "0.7.4",
    "webdriverio": "4.14.0"
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 6.4.0",
    "yarn": ">= 1.12.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ]
}
